@model StudentManagementSystem.ViewModels.RoomViewModel
@{
    ViewData["Title"] = "Edit Room";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"] - @Model.RoomNumber</h5>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RoomNumber" class="form-label">Room Number *</label>
                                <input asp-for="RoomNumber" class="form-control" placeholder="e.g., A101" />
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RoomName" class="form-label">Room Name *</label>
                                <input asp-for="RoomName" class="form-control" placeholder="e.g., Computer Lab 1" />
                                <span asp-validation-for="RoomName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="RoomType" class="form-label">Room Type *</label>
                                <select asp-for="RoomType" class="form-select" asp-items="ViewBag.RoomTypes">
                                    <option value="">Select Type</option>
                                </select>
                                <span asp-validation-for="RoomType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Building" class="form-label">Building *</label>
                                <input asp-for="Building" class="form-control" placeholder="e.g., Main Building" />
                                <span asp-validation-for="Building" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Floor" class="form-label">Floor</label>
                                <input asp-for="Floor" class="form-control" placeholder="e.g., Ground Floor, 1st Floor" />
                                <span asp-validation-for="Floor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Capacity" class="form-label">Capacity *</label>
                                <input asp-for="Capacity" type="number" class="form-control" placeholder="Maximum number of students" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Equipment</label>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input asp-for="HasProjector" class="form-check-input" />
                                            <label asp-for="HasProjector" class="form-check-label">Projector</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input asp-for="HasComputers" class="form-check-input" />
                                            <label asp-for="HasComputers" class="form-check-label">Computers</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input asp-for="HasAirConditioning" class="form-check-input" />
                                            <label asp-for="HasAirConditioning" class="form-check-label">Air Conditioning</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Equipment" class="form-label">Additional Equipment</label>
                        <textarea asp-for="Equipment" class="form-control" rows="3" placeholder="List any additional equipment or features..."></textarea>
                        <span asp-validation-for="Equipment" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Update Room
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}