@model StudentManagementSystem.ViewModels.RoomViewModel
@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"] - @Model.RoomNumber</h5>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Room Number:</dt>
                            <dd class="col-sm-7"><strong>@Model.RoomNumber</strong></dd>
                            
                            <dt class="col-sm-5">Room Name:</dt>
                            <dd class="col-sm-7">@Model.RoomName</dd>
                            
                            <dt class="col-sm-5">Type:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-secondary">@Model.RoomType</span>
                            </dd>
                            
                            <dt class="col-sm-5">Capacity:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-info">@Model.Capacity students</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Building:</dt>
                            <dd class="col-sm-8"><strong>@Model.Building</strong></dd>
                            
                            @if (!string.IsNullOrEmpty(Model.Floor))
                            {
                                <dt class="col-sm-4">Floor:</dt>
                                <dd class="col-sm-8">@Model.Floor</dd>
                            }
                            
                            <dt class="col-sm-4">Active Batches:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">@Model.CurrentBatches</span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Equipment & Features:</h6>
                        <div class="d-flex gap-3">
                            @if (Model.HasProjector)
                            {
                                <span class="badge bg-success"><i class="fas fa-video"></i> Projector</span>
                            }
                            @if (Model.HasComputers)
                            {
                                <span class="badge bg-primary"><i class="fas fa-desktop"></i> Computers</span>
                            }
                            @if (Model.HasAirConditioning)
                            {
                                <span class="badge bg-info"><i class="fas fa-snowflake"></i> Air Conditioning</span>
                            }
                            @if (!Model.HasProjector && !Model.HasComputers && !Model.HasAirConditioning)
                            {
                                <span class="text-muted">No special equipment</span>
                            }
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Equipment))
                {
                    <div class="mt-3">
                        <h6>Additional Equipment:</h6>
                        <p class="text-muted">@Model.Equipment</p>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") by @Model.CreatedBy
                        </small>
                    </div>
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <div class="col-md-6">
                            <small class="text-muted">
                                <strong>Last Modified:</strong> @Model.ModifiedDate.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt") by @Model.ModifiedBy
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (Model.AssignedBatches.Any())
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">Assigned Batches</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Batch Code</th>
                                    <th>Batch Name</th>
                                    <th>Trade</th>
                                    <th>Students</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var batch in Model.AssignedBatches)
                                {
                                    <tr>
                                        <td><strong>@batch.BatchCode</strong></td>
                                        <td>@batch.BatchName</td>
                                        <td>@batch.TradeName</td>
                                        <td>@batch.StudentCount</td>
                                        <td>
                                            @if (batch.Status == "Active")
                                            {
                                                <span class="badge bg-success">@batch.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@batch.Status</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Batches" asp-action="Details" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Batches" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Assign Batch
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-edit"></i> Edit Room
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Room Statistics</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-info">@Model.Capacity</h4>
                            <small class="text-muted">Max Capacity</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">@Model.CurrentBatches</h4>
                        <small class="text-muted">Active Batches</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>