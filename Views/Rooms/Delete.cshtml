@model StudentManagementSystem.ViewModels.RoomViewModel
@{
    ViewData["Title"] = "Delete Room";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-danger">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this room?
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th>Room Number:</th>
                                <td>@Model.RoomNumber</td>
                            </tr>
                            <tr>
                                <th>Room Name:</th>
                                <td>@Model.RoomName</td>
                            </tr>
                            <tr>
                                <th>Type:</th>
                                <td>@Model.RoomType</td>
                            </tr>
                            <tr>
                                <th>Building:</th>
                                <td>@Model.Building</td>
                            </tr>
                            <tr>
                                <th>Floor:</th>
                                <td>@(Model.Floor ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Capacity:</th>
                                <td>@Model.Capacity students</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th>Current Batches:</th>
                                <td>
                                    @if (Model.CurrentBatches > 0)
                                    {
                                        <span class="badge bg-warning">@Model.CurrentBatches Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">None</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Projector:</th>
                                <td>
                                    @if (Model.HasProjector)
                                    {
                                        <i class="fas fa-check text-success"></i> @:Yes
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-danger"></i> @:No
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Computers:</th>
                                <td>
                                    @if (Model.HasComputers)
                                    {
                                        <i class="fas fa-check text-success"></i> @:Yes
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-danger"></i> @:No
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Air Conditioning:</th>
                                <td>
                                    @if (Model.HasAirConditioning)
                                    {
                                        <i class="fas fa-check text-success"></i> @:Yes
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-danger"></i> @:No
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Equipment))
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <h6>Additional Equipment:</h6>
                            <p class="text-muted">@Model.Equipment</p>
                        </div>
                    </div>
                }

                @if (Model.CurrentBatches > 0)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>Cannot Delete:</strong> This room has @Model.CurrentBatches active batch(es) assigned. Please reassign or complete these batches before deleting the room.
                    </div>
                    
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                }
                else
                {
                    <form asp-action="Delete" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Room
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>