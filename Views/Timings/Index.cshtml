@model StudentManagementSystem.ViewModels.TimingListViewModel
@{
    ViewData["Title"] = "Timings Management";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted mb-0">Manage class timings and schedules</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Timing
    </a>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Timing name, shift, type..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Type</label>
                <select asp-for="TypeFilter" class="form-select">
                    <option value="">All Types</option>
                    @foreach (var type in Model.TimingTypes)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-refresh"></i> Reset
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">Timings List (@Model.TotalRecords records)</h6>
    </div>
    <div class="card-body p-0">
        @if (Model.Timings.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Duration</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Created</th>
                            <th width="180">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var timing in Model.Timings)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="icon-circle bg-primary text-white me-2">
                                            <i class="fas fa-play fa-sm"></i>
                                        </div>
                                        <div>
                                            <strong>@timing.StartTime.ToString(@"hh\:mm")</strong>
                                            <br><small class="text-muted">@timing.Name</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="icon-circle bg-danger text-white me-2">
                                            <i class="fas fa-stop fa-sm"></i>
                                        </div>
                                        <strong>@timing.EndTime.ToString(@"hh\:mm")</strong>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info fs-6">
                                        @timing.Duration
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(timing.Description))
                                    {
                                        @timing.Description
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(timing.Type))
                                    {
                                        <span class="badge bg-secondary">@timing.Type</span>
                                    }
                                    @if (!string.IsNullOrEmpty(timing.Shift))
                                    {
                                        <br><span class="badge bg-primary mt-1">@timing.Shift</span>
                                    }
                                </td>
                                <td>
                                    <small>
                                        @timing.CreatedDate.ToString("MMM dd, yyyy")<br>
                                        <span class="text-muted">by @timing.CreatedBy</span>
                                        @if (timing.BatchCount > 0)
                                        {
                                            <br><span class="badge bg-success mt-1">@timing.BatchCount batches</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@timing.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@timing.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (timing.BatchCount == 0)
                                        {
                                            <a asp-action="Delete" asp-route-id="@timing.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="Cannot delete - has assigned batches">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No timings found</h5>
                <p class="text-muted">Start by creating your first timing schedule.</p>
                <a asp-action="Create" class="btn btn-primary">Create Timing</a>
            </div>
        }
    </div>
    
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer">
            <nav aria-label="Timings pagination">
                <ul class="pagination justify-content-center mb-0">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.PageNumber - 1)"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-typeFilter="@Model.TypeFilter">
                                Previous
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-typeFilter="@Model.TypeFilter">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.PageNumber + 1)"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-typeFilter="@Model.TypeFilter">
                                Next
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

@section Styles {
    <style>
        .icon-circle {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }
        
        .bg-outline-primary {
            border: 1px solid var(--bs-primary);
            color: var(--bs-primary);
            background: transparent;
        }
        
        .badge {
            font-size: 0.7rem;
        }
    </style>
}
