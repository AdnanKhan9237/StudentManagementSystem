@model StudentManagementSystem.ViewModels.BatchViewModel
@{
    ViewData["Title"] = "Delete Batch";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-danger">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this batch?
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th>Batch Code:</th>
                                <td>@Model.BatchCode</td>
                            </tr>
                            <tr>
                                <th>Batch Name:</th>
                                <td>@Model.BatchName</td>
                            </tr>
                            <tr>
                                <th>Session:</th>
                                <td>@Model.SessionName</td>
                            </tr>
                            <tr>
                                <th>Trade:</th>
                                <td>@Model.TradeName</td>
                            </tr>
                            <tr>
                                <th>Room:</th>
                                <td>@Model.RoomNumber</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th>Status:</th>
                                <td>
                                    <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Completed" ? "primary" : Model.Status == "Suspended" ? "danger" : "secondary")">
                                        @Model.Status
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Enrolled Students:</th>
                                <td>
                                    @if (Model.CurrentStudents > 0)
                                    {
                                        <span class="badge bg-warning">@Model.CurrentStudents Students</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">No Students</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Max Students:</th>
                                <td>@Model.MaxStudents</td>
                            </tr>
                            <tr>
                                <th>Start Date:</th>
                                <td>@Model.StartDate.ToString("MM/dd/yyyy")</td>
                            </tr>
                            <tr>
                                <th>End Date:</th>
                                <td>@Model.EndDate.ToString("MM/dd/yyyy")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (Model.CurrentStudents > 0)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>Cannot Delete:</strong> This batch has @Model.CurrentStudents enrolled student(s). Please remove or transfer these students before deleting the batch.
                    </div>
                    
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                }
                else
                {
                    <form asp-action="Delete" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Batch
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>