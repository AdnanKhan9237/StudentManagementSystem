@model StudentManagementSystem.ViewModels.BatchListViewModel
@{
    ViewData["Title"] = "Batches Management";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Batch
    </a>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by batch code, name, or trade..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Session</label>
                <select name="sessionId" class="form-select">
                    <option value="">All Sessions</option>
                    @foreach (var session in Model.Sessions)
                    {
                        <option value="@session.Id" selected="@(session.Id == Model.SessionId)">@session.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Trade</label>
                <select name="tradeId" class="form-select">
                    <option value="">All Trades</option>
                    @foreach (var trade in Model.Trades)
                    {
                        <option value="@trade.Id" selected="@(trade.Id == Model.TradeId)">@trade.NameEnglish</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (var status in Model.Statuses)
                    {
                        <option value="@status" selected="@(status == Model.Status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">Batches List (@Model.TotalRecords records)</h6>
    </div>
    <div class="card-body p-0">
        @if (Model.Batches.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Batch Info</th>
                            <th>Session</th>
                            <th>Trade</th>
                            <th>Room</th>
                            <th>Teachers</th>
                            <th>Students</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var batch in Model.Batches)
                        {
                            <tr>
                                <td>
                                    <strong>@batch.BatchCode</strong><br>
                                    <small class="text-muted">@batch.BatchName</small>
                                </td>
                                <td>@batch.SessionName</td>
                                <td>@batch.TradeName</td>
                                <td>@batch.RoomNumber</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(batch.PrimaryInstructorName))
                                    {
                                        <div><small><strong>P:</strong> @batch.PrimaryInstructorName</small></div>
                                    }
                                    @if (!string.IsNullOrEmpty(batch.SecondaryInstructorName))
                                    {
                                        <div><small><strong>S:</strong> @batch.SecondaryInstructorName</small></div>
                                    }
                                    @if (string.IsNullOrEmpty(batch.PrimaryInstructorName) && string.IsNullOrEmpty(batch.SecondaryInstructorName))
                                    {
                                        <small class="text-warning">No teachers assigned</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@batch.CurrentStudents/@batch.MaxStudents</span>
                                </td>
                                <td>
                                    @if (batch.Status == "Active")
                                    {
                                        <span class="badge bg-success">@batch.Status</span>
                                    }
                                    else if (batch.Status == "Completed")
                                    {
                                        <span class="badge bg-info">@batch.Status</span>
                                    }
                                    else if (batch.Status == "Suspended")
                                    {
                                        <span class="badge bg-danger">@batch.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@batch.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="AssignTeacher" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-success" title="Assign Teachers">
                                            <i class="fas fa-chalkboard-teacher"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No batches found</h5>
                <p class="text-muted">Start by creating your first batch.</p>
                <a asp-action="Create" class="btn btn-primary">Create Batch</a>
            </div>
        }
    </div>
</div>