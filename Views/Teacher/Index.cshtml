@model StudentManagementSystem.ViewModels.TeacherListViewModel

@{
    ViewData["Title"] = "Teachers";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-chalkboard-teacher text-primary"></i> Teachers</h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Teacher
            </a>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="get">
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="SearchTerm" class="form-label">Search Teachers</label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Teacher code, name, username, or CNIC...">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            @Html.DropDownListFor(m => m.Status, Model.StatusOptions, new { @class = "form-select" })
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary me-2">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                        <div class="col-md-2 text-end">
                            <small class="text-muted">
                                Total: @Model.TotalRecords teachers
                            </small>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Teachers List -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Teachers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Photo</th>
                                    <th>Teacher Code</th>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Contact</th>
                                    <th>Qualification</th>
                                    <th>Hire Date</th>
                                    <th>Batches</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var teacher in Model.Teachers)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(teacher.PhotoPath))
                                            {
                                                <img src="@teacher.PhotoPath" alt="Photo" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@teacher.TeacherCode</strong>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@teacher.FullName</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">@teacher.Username</span>
                                        </td>
                                        <td>
                                            <div>
                                                @if (!string.IsNullOrEmpty(teacher.Email))
                                                {
                                                    <small><i class="fas fa-envelope"></i> @teacher.Email</small><br>
                                                }
                                                @if (!string.IsNullOrEmpty(teacher.PhoneNumber))
                                                {
                                                    <small><i class="fas fa-phone"></i> @teacher.PhoneNumber</small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <small class="text-muted">@teacher.Qualification</small><br>
                                                <small class="text-muted">@teacher.Specialization</small>
                                            </div>
                                        </td>
                                        <td>@teacher.HireDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <small>
                                                <span class="badge bg-primary">@teacher.PrimaryBatchCount Primary</span><br>
                                                <span class="badge bg-secondary">@teacher.SecondaryBatchCount Secondary</span>
                                            </small>
                                        </td>
                                        <td>
                                            @if (teacher.Status == "Active")
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else if (teacher.Status == "Inactive")
                                            {
                                                <span class="badge bg-warning">Inactive</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Terminated</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Teachers pagination">
                            <ul class="pagination justify-content-center mt-3">
                                @if (Model.PageNumber > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-route-page="@(Model.PageNumber - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-status="@Model.Status">Previous</a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-status="@Model.Status">@i</a>
                                    </li>
                                }

                                @if (Model.PageNumber < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-route-page="@(Model.PageNumber + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-status="@Model.Status">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                        <h4>No Teachers Found</h4>
                        <p class="text-muted">No teachers match your search criteria.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Teacher
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit search form when status changes
        document.querySelector('select[name="Status"]').addEventListener('change', function() {
            this.form.submit();
        });
    </script>
}