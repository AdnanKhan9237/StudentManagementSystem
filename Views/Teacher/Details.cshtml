@model StudentManagementSystem.ViewModels.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Details";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-chalkboard-teacher text-primary"></i> Teacher Details</h1>
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Left Column - Main Information -->
    <div class="col-md-8">
        <!-- Basic Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-info-circle"></i> Basic Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Teacher Code</label>
                            <p class="form-control-plaintext">@Model.TeacherCode</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Username</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-light text-dark">@Model.Username</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">First Name</label>
                            <p class="form-control-plaintext">@Model.FirstName</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Last Name</label>
                            <p class="form-control-plaintext">@Model.LastName</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Father Name</label>
                            <p class="form-control-plaintext">@(Model.FatherName ?? "N/A")</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">CNIC</label>
                            <p class="form-control-plaintext">@(Model.CNIC ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Gender</label>
                            <p class="form-control-plaintext">@Model.Gender</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Date of Birth</label>
                            <p class="form-control-plaintext">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5><i class="fas fa-phone"></i> Contact Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Phone Number</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <i class="fas fa-phone text-success"></i> @Model.PhoneNumber
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <i class="fas fa-envelope text-primary"></i> <a href="mailto:@Model.Email">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Address</label>
                        <p class="form-control-plaintext">@Model.Address</p>
                    </div>
                }
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">City</label>
                            <p class="form-control-plaintext">@(Model.City ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Province</label>
                            <p class="form-control-plaintext">@(Model.Province ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Postal Code</label>
                            <p class="form-control-plaintext">@(Model.PostalCode ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Emergency Contact -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5><i class="fas fa-exclamation-triangle"></i> Emergency Contact</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Emergency Contact Name</label>
                            <p class="form-control-plaintext">@(Model.EmergencyContactName ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Emergency Contact Phone</label>
                            <p class="form-control-plaintext">@(Model.EmergencyContactPhone ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assigned Batches -->
        @if (Model.AssignedBatches.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-layer-group"></i> Assigned Batches</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            @foreach (var batch in Model.AssignedBatches)
                            {
                                <span class="badge bg-primary me-2 mb-2">@batch</span>
                            }
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            Total: @Model.PrimaryBatchCount Primary Batches, @Model.SecondaryBatchCount Secondary Batches
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Right Column - Additional Information -->
    <div class="col-md-4">
        <!-- Photo -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-camera"></i> Photo</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                    <img src="@Model.PhotoPath" alt="Teacher Photo" class="img-fluid rounded shadow" style="max-width: 100%; max-height: 300px;">
                }
                else
                {
                    <div class="bg-light rounded p-5">
                        <i class="fas fa-user fa-5x text-muted"></i>
                        <p class="text-muted mt-2">No photo available</p>
                    </div>
                }
            </div>
        </div>

        <!-- Professional Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-graduation-cap"></i> Professional Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Hire Date</label>
                    <p class="form-control-plaintext">
                        <i class="fas fa-calendar-alt text-primary"></i> @Model.HireDate.ToString("MMMM dd, yyyy")
                    </p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Status</label>
                    <p class="form-control-plaintext">
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (Model.Status == "Inactive")
                        {
                            <span class="badge bg-warning">Inactive</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Terminated</span>
                        }
                    </p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Qualification</label>
                    <p class="form-control-plaintext">@(Model.Qualification ?? "N/A")</p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Specialization</label>
                    <p class="form-control-plaintext">@(Model.Specialization ?? "N/A")</p>
                </div>
                @if (Model.Salary.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Salary</label>
                        <p class="form-control-plaintext">
                            <i class="fas fa-money-bill-wave text-success"></i> @Model.Salary.Value.ToString("C")
                        </p>
                    </div>
                }
            </div>
        </div>

        <!-- Batch Statistics -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-chart-bar"></i> Batch Assignment</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Primary Batches:</span>
                    <span class="badge bg-primary">@Model.PrimaryBatchCount</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Secondary Batches:</span>
                    <span class="badge bg-secondary">@Model.SecondaryBatchCount</span>
                </div>
            </div>
        </div>

        <!-- Audit Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-history"></i> Audit Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Created Date</label>
                    <p class="form-control-plaintext">
                        <small>@Model.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                    </p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Created By</label>
                    <p class="form-control-plaintext">
                        <small>@(Model.CreatedBy ?? "System")</small>
                    </p>
                </div>
                @if (Model.ModifiedDate.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Last Modified</label>
                        <p class="form-control-plaintext">
                            <small>@Model.ModifiedDate.Value.ToString("MMM dd, yyyy hh:mm tt")</small>
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Modified By</label>
                        <p class="form-control-plaintext">
                            <small>@(Model.ModifiedBy ?? "System")</small>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Remarks Section -->
@if (!string.IsNullOrEmpty(Model.Remarks))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-comment"></i> Remarks</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Remarks</p>
                </div>
            </div>
        </div>
    </div>
}