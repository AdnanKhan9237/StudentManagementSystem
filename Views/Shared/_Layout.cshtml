@using StudentManagementSystem.Constants
@inject Microsoft.AspNetCore.Identity.SignInManager<StudentManagementSystem.Models.Entities.ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<StudentManagementSystem.Models.Entities.ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container-fluid">
                <button class="btn btn-link text-white me-3" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap"></i> Student Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h5><i class="fas fa-school"></i> Navigation</h5>
            </div>
            <ul class="sidebar-menu">
                <li>
                    <a asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                    </a>
                </li>

                @* SuperAdmin and Admin - User Management *@
                @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
                {
                    <li class="sidebar-dropdown">
                        <a href="#" class="sidebar-dropdown-toggle">
                            <i class="fas fa-user-cog"></i> <span>Users</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <ul class="sidebar-submenu">
                            <li><a asp-controller="UserManagement" asp-action="Index"><i class="fas fa-users-cog"></i> All Users</a></li>
                            <li><a asp-controller="UserManagement" asp-action="Create"><i class="fas fa-user-plus"></i> Add User</a></li>
                        </ul>
                    </li>
                }

                @* Students Menu - SuperAdmin, Accounts, Teacher *@
                @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Accounts) || User.IsInRole(UserRoles.Teacher))
                {
                    <li class="sidebar-dropdown">
                        <a href="#" class="sidebar-dropdown-toggle">
                            <i class="fas fa-users"></i> <span>Students</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <ul class="sidebar-submenu">
                            <li><a asp-controller="Students" asp-action="Index"><i class="fas fa-list"></i> @(User.IsInRole(UserRoles.Teacher) ? "My Students" : "All Students")</a></li>
                            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Accounts))
                            {
                                <li><a asp-controller="Students" asp-action="Create"><i class="fas fa-plus"></i> Add Student</a></li>
                            }
                            @if (User.IsInRole(UserRoles.Teacher))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li><a asp-controller="Attendance" asp-action="Index"><i class="fas fa-calendar-check"></i> Attendance</a></li>
                            }
                        </ul>
                    </li>
                }

                @* Academic Setup - SuperAdmin, Admin Only *@
                @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
                {
                    <li class="sidebar-dropdown">
                        <a href="#" class="sidebar-dropdown-toggle">
                            <i class="fas fa-cogs"></i> <span>Academic Setup</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <ul class="sidebar-submenu">
                            <li><a asp-controller="Trades" asp-action="Index"><i class="fas fa-tools"></i> Trades</a></li>
                            <li><a asp-controller="Sessions" asp-action="Index"><i class="fas fa-calendar-alt"></i> Sessions</a></li>
                            <li><a asp-controller="Batches" asp-action="Index"><i class="fas fa-layer-group"></i> Batches</a></li>
                            <li><a asp-controller="Teacher" asp-action="Index"><i class="fas fa-chalkboard-teacher"></i> Teachers</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a asp-controller="Timings" asp-action="Index"><i class="fas fa-clock"></i> Timings</a></li>
                            <li><a asp-controller="Rooms" asp-action="Index"><i class="fas fa-door-open"></i> Rooms</a></li>
                        </ul>
                    </li>
                }

                @* Fee Management - SuperAdmin, Accounts Only *@
                @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Accounts))
                {
                    <li class="sidebar-dropdown">
                        <a href="#" class="sidebar-dropdown-toggle">
                            <i class="fas fa-money-bill-wave"></i> <span>Fee Management</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <ul class="sidebar-submenu">
                            <li><a asp-controller="FeeManagement" asp-action="Index"><i class="fas fa-list"></i> All Students</a></li>
                            <li><a asp-controller="FeeManagement" asp-action="Reports"><i class="fas fa-chart-bar"></i> Fee Reports</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a asp-controller="FeeManagement" asp-action="Index" asp-route-statusFilter="unpaid"><i class="fas fa-exclamation-circle"></i> Unpaid</a></li>
                            <li><a asp-controller="FeeManagement" asp-action="Index" asp-route-statusFilter="partial"><i class="fas fa-clock"></i> Partial</a></li>
                        </ul>
                    </li>
                }

                @* Student Profile - Student Role Only *@
                @if (User.IsInRole(UserRoles.Student))
                {
                    <li>
                        <a asp-controller="Students" asp-action="Profile">
                            <i class="fas fa-user"></i> <span>My Profile</span>
                        </a>
                    </li>
                }

                @* Reports - SuperAdmin, Admin *@
                @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
                {
                    <li>
                        <a href="#">
                            <i class="fas fa-chart-bar"></i> <span>Reports</span>
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <main role="main" class="pb-4">
                @RenderBody()
            </main>

            <footer class="footer mt-auto py-3 bg-light">
                <div class="container-fluid text-center text-muted">
                    &copy; 2025 Student Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    }
    else
    {
        <!-- Public Layout for non-authenticated users -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-graduation-cap"></i> Student Management System
                    </a>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
        <div class="container mt-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted mt-5">
            <div class="container">
                &copy; 2025 - Student Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
