@using StudentManagementSystem.Constants
@inject Microsoft.AspNetCore.Identity.SignInManager<StudentManagementSystem.Models.Entities.ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<StudentManagementSystem.Models.Entities.ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StudentManagementSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            </li>

                            @* SuperAdmin and Admin - User Management *@
                            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="userMgmtDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user-cog"></i> Users
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="Index">
                                            <i class="fas fa-users-cog"></i> All Users
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="Create">
                                            <i class="fas fa-user-plus"></i> Add User
                                        </a></li>
                                    </ul>
                                </li>
                            }
                            @* Students Menu - SuperAdmin, Accounts, Teacher *@
                            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Accounts) || User.IsInRole(UserRoles.Teacher))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="studentsDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-users"></i> Students
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">
                                            <i class="fas fa-list"></i> @(User.IsInRole(UserRoles.Teacher) ? "My Students" : "All Students")
                                        </a></li>
                                        @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Accounts))
                                        {
                                            <li><a class="dropdown-item" asp-controller="Students" asp-action="Create">
                                                <i class="fas fa-plus"></i> Add Student
                                            </a></li>
                                        }
                                        @if (User.IsInRole(UserRoles.Teacher))
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" asp-controller="Attendance" asp-action="Index">
                                                <i class="fas fa-calendar-check"></i> Attendance Management
                                            </a></li>
                                        }
                                    </ul>
                                </li>
                            }
                            @* Academic Setup - SuperAdmin, Admin Only *@
                            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="academicDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cogs"></i> Academic Setup
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Trades" asp-action="Index">
                                            <i class="fas fa-tools"></i> Manage Trades
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Sessions" asp-action="Index">
                                            <i class="fas fa-calendar-alt"></i> Manage Sessions
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Batches" asp-action="Index">
                                            <i class="fas fa-layer-group"></i> Manage Batches
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Teacher" asp-action="Index">
                                            <i class="fas fa-chalkboard-teacher"></i> Manage Teachers
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Timings" asp-action="Index">
                                            <i class="fas fa-clock"></i> Manage Timings
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Rooms" asp-action="Index">
                                            <i class="fas fa-door-open"></i> Manage Rooms
                                        </a></li>
                                    </ul>
                                </li>
                            }
                            @* Fee Management - SuperAdmin, Accounts Only *@
                            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Accounts))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="feeDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-money-bill-wave"></i> Fee Management
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="FeeManagement" asp-action="Index">
                                            <i class="fas fa-list"></i> All Students
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="FeeManagement" asp-action="Reports">
                                            <i class="fas fa-chart-bar"></i> Fee Reports
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="FeeManagement" asp-action="Index" asp-route-statusFilter="unpaid">
                                            <i class="fas fa-exclamation-circle"></i> Unpaid Students
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="FeeManagement" asp-action="Index" asp-route-statusFilter="partial">
                                            <i class="fas fa-clock"></i> Partial Payments
                                        </a></li>
                                    </ul>
                                </li>
                            }
                            @* Student Profile - Student Role Only *@
                            @if (User.IsInRole(UserRoles.Student))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Students" asp-action="Profile">
                                        <i class="fas fa-user"></i> My Profile
                                    </a>
                                </li>
                            }
                            @* Reports - SuperAdmin, Admin *@
                            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="#">
                                        <i class="fas fa-chart-bar"></i> Reports
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StudentManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
