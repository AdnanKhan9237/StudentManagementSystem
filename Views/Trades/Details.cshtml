@model TradeViewModel

@{
    ViewData["Title"] = "Trade Details";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-12">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Trade Details</h5>
                            </div>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-action="Index" asp-controller="Home">
                                        <i class="feather icon-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a asp-action="Index" asp-controller="Trades">Trades</a>
                                </li>
                                <li class="breadcrumb-item">Details</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>@Model.NameEnglish</h5>
                    <div class="float-right">
                        <span class="badge @(Model.IsActive ? "badge-success" : "badge-secondary")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Trade Code:</strong></td>
                                    <td>@Model.Code</td>
                                </tr>
                                <tr>
                                    <td><strong>Name (English):</strong></td>
                                    <td>@Model.NameEnglish</td>
                                </tr>
                                <tr>
                                    <td><strong>Name (Urdu):</strong></td>
                                    <td>@(string.IsNullOrEmpty(Model.NameUrdu) ? "-" : Model.NameUrdu)</td>
                                </tr>
                                <tr>
                                    <td><strong>Duration:</strong></td>
                                    <td>@Model.Duration months</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Total Fee:</strong></td>
                                    <td class="text-primary">â‚¨@Model.TotalFee.ToString("N0")</td>
                                </tr>
                                <tr>
                                    <td><strong>Maximum Students:</strong></td>
                                    <td>@Model.MaxStudents</td>
                                </tr>
                                <tr>
                                    <td><strong>Current Students:</strong></td>
                                    <td class="text-info">@Model.CurrentStudents</td>
                                </tr>
                                <tr>
                                    <td><strong>Available Slots:</strong></td>
                                    <td class="text-success">@(Model.MaxStudents - Model.CurrentStudents)</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.DescriptionEnglish))
                    {
                        <div class="mt-3">
                            <h6>Description (English)</h6>
                            <p class="text-muted">@Model.DescriptionEnglish</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.DescriptionUrdu))
                    {
                        <div class="mt-3">
                            <h6>Description (Urdu)</h6>
                            <p class="text-muted">@Model.DescriptionUrdu</p>
                        </div>
                    }

                    <div class="mt-4">
                        <h6>System Information</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <strong>Created:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm") by @Model.CreatedBy
                                </small>
                            </div>
                            @if (Model.ModifiedDate.HasValue)
                            {
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Modified:</strong> @Model.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm") by @Model.ModifiedBy
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Enrollment Statistics</h5>
                </div>
                <div class="card-body text-center">
                    <div class="progress mb-3" style="height: 20px;">
                        @{
                            var fillPercentage = Model.MaxStudents > 0 ? (Model.CurrentStudents * 100.0 / Model.MaxStudents) : 0;
                        }
                        <div class="progress-bar @(fillPercentage >= 90 ? "bg-danger" : fillPercentage >= 70 ? "bg-warning" : "bg-success")" 
                             role="progressbar" style="width: @fillPercentage%" 
                             aria-valuenow="@fillPercentage" aria-valuemin="0" aria-valuemax="100">
                            @fillPercentage.ToString("F1")%
                        </div>
                    </div>
                    <p class="text-muted">
                        @Model.CurrentStudents of @Model.MaxStudents students enrolled
                    </p>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="text-info">
                                <i class="fas fa-users fa-2x"></i>
                                <div class="mt-2">
                                    <strong>@Model.CurrentStudents</strong>
                                    <br><small>Enrolled</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-success">
                                <i class="fas fa-user-plus fa-2x"></i>
                                <div class="mt-2">
                                    <strong>@(Model.MaxStudents - Model.CurrentStudents)</strong>
                                    <br><small>Available</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-primary">
                                <i class="fas fa-chart-line fa-2x"></i>
                                <div class="mt-2">
                                    <strong>@fillPercentage.ToString("F0")%</strong>
                                    <br><small>Filled</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block">
                            <i class="fas fa-edit"></i> Edit Trade
                        </a>
                        @if (Model.CurrentStudents == 0)
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block">
                                <i class="fas fa-trash"></i> Delete Trade
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger btn-block disabled" title="Cannot delete trade with enrolled students">
                                <i class="fas fa-trash"></i> Delete Trade
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary btn-block">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>