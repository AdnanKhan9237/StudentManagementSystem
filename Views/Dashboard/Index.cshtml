@model StudentManagementSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<!-- Welcome Header -->
<div class="welcome-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="welcome-title mb-2">Welcome back! ðŸ‘‹</h1>
            <p class="welcome-subtitle mb-0">Here's what's happening with your student management system today.</p>
        </div>
        <div class="date-info">
            <div class="date-card">
                <i class="fas fa-calendar-alt me-2"></i>
                @DateTime.Now.ToString("MMMM dd, yyyy")
            </div>
        </div>
    </div>
</div>

<!-- Modern Statistics Cards -->
<div class="row g-4 mb-5">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card stat-card-primary">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.TotalStudents</h3>
                    <p class="stat-label">Total Students</p>
                    <div class="stat-trend">
                        <span class="trend-icon"><i class="fas fa-arrow-up"></i></span>
                        <span class="trend-text">+12% this month</span>
                    </div>
                </div>
            </div>
            <div class="stat-action">
                <a asp-controller="Students" asp-action="Index" class="btn btn-stat">
                    View All <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card stat-card-success">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.ActiveStudents</h3>
                    <p class="stat-label">Active Students</p>
                    <div class="stat-trend">
                        <span class="trend-icon success"><i class="fas fa-arrow-up"></i></span>
                        <span class="trend-text">+8% this month</span>
                    </div>
                </div>
            </div>
            <div class="stat-action">
                <a asp-controller="Students" asp-action="Index" asp-route-statusFilter="Active" class="btn btn-stat">
                    View Active <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card stat-card-info">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="fas fa-tools"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.TotalTrades</h3>
                    <p class="stat-label">Available Trades</p>
                    <div class="stat-trend">
                        <span class="trend-icon info"><i class="fas fa-minus"></i></span>
                        <span class="trend-text">No change</span>
                    </div>
                </div>
            </div>
            <div class="stat-action">
                <a asp-controller="Trades" asp-action="Index" class="btn btn-stat">
                    Manage <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card stat-card-warning">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.TotalBatches</h3>
                    <p class="stat-label">Active Batches</p>
                    <div class="stat-trend">
                        <span class="trend-icon warning"><i class="fas fa-arrow-up"></i></span>
                        <span class="trend-text">+3 new batches</span>
                    </div>
                </div>
            </div>
            <div class="stat-action">
                <a asp-controller="Batches" asp-action="Index" class="btn btn-stat">
                    View All <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="stat-card stat-card-secondary">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.ActiveTeachers</h3>
                    <p class="stat-label">Active Teachers</p>
                    <div class="stat-trend">
                        <span class="trend-icon secondary"><i class="fas fa-arrow-up"></i></span>
                        <span class="trend-text">@Model.TotalTeachers total</span>
                    </div>
                </div>
            </div>
            <div class="stat-action">
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-stat">
                    Manage <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Fee Statistics -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Fee Collection Overview</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h6 class="text-muted">Total Fee Amount</h6>
                        <h4 class="text-primary">â‚¨@Model.TotalFeeAmount.ToString("N0")</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Collected Amount</h6>
                        <h4 class="text-success">â‚¨@Model.CollectedFeeAmount.ToString("N0")</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Pending Amount</h6>
                        <h4 class="text-danger">â‚¨@Model.PendingFeeAmount.ToString("N0")</h4>
                    </div>
                    <div class="col-md-3">
                        <h6 class="text-muted">Collection Rate</h6>
                        <h4 class="@(Model.CollectionRate >= 80 ? "text-success" : Model.CollectionRate >= 50 ? "text-warning" : "text-danger")">
                            @Model.CollectionRate.ToString("F1")%
                        </h4>
                    </div>
                </div>
                @if (Model.TotalFeeAmount > 0)
                {
                    <div class="mt-3">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" style="width: @Model.CollectionRate%">
                                Collected: @Model.CollectionRate.ToString("F1")%
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- Recent Students -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Admissions</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentStudents.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var student in Model.RecentStudents)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(student.PhotoPath))
                                    {
                                        <img src="@student.PhotoPath" alt="Photo" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; color: white;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="mb-1">@student.FullName</h6>
                                        <small class="text-muted">@student.RegistrationNumber - @student.TradeName</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@student.AdmissionDate.ToString("MMM dd")</small>
                                    <br>
                                    <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-user-plus fa-3x mb-3"></i>
                        <p>No recent admissions</p>
                    </div>
                }
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Students" asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add New Student
                </a>
            </div>
        </div>
    </div>

    <!-- Students by Status -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Students by Status</h5>
            </div>
            <div class="card-body">
                @if (Model.StudentsByStatus.Any())
                {
                    <div class="chart-container mb-3" style="position: relative; height: 250px;">
                        <canvas id="statusChart"></canvas>
                    </div>
                    
                    <div class="status-legend" style="max-height: 200px; overflow-y: auto;">
                        @foreach (var status in Model.StudentsByStatus.Take(5))
                        {
                            <div class="d-flex justify-content-between align-items-center py-2">
                                <span class="@(status.Status switch 
                                {
                                    "Active" => "text-success",
                                    "Graduated" => "text-primary", 
                                    "Dropped" => "text-danger",
                                    "Suspended" => "text-warning",
                                    _ => "text-secondary"
                                })">
                                    <i class="fas fa-circle"></i> @status.Status
                                </span>
                                <span class="badge bg-secondary">@status.Count</span>
                            </div>
                        }
                        @if (Model.StudentsByStatus.Count > 5)
                        {
                            <div class="text-center mt-2">
                                <small class="text-muted">... and @(Model.StudentsByStatus.Count - 5) more</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-chart-pie fa-3x mb-3"></i>
                        <p>No data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- Students by Trade -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Top Trades by Enrollment</h5>
            </div>
            <div class="card-body">
                @if (Model.StudentsByTrade.Any())
                {
                    <canvas id="tradeChart" width="400" height="200"></canvas>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-chart-bar fa-3x mb-3"></i>
                        <p>No enrollment data available</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Low Capacity Trades -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle text-warning"></i> Low Capacity Trades</h5>
            </div>
            <div class="card-body">
                @if (Model.LowCapacityTrades.Any())
                {
                    @foreach (var trade in Model.LowCapacityTrades)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="fw-bold">@trade.TradeName</small>
                                <small class="text-muted">@trade.CurrentStudents/@trade.MaxStudents</small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-warning" style="width: @trade.FillPercentage%"></div>
                            </div>
                            <small class="text-muted">@trade.FillPercentage.ToString("F1")% filled</small>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                        <p class="mb-0">All trades are well filled</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Monthly Admissions Chart -->
@if (Model.MonthlyAdmissions.Any())
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-line"></i> Monthly Admissions Trend (Last 6 Months)</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyChart" width="400" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Status Chart
        @if (Model.StudentsByStatus.Any())
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                const statusCanvas = document.getElementById('statusChart');
                if (statusCanvas) {
                    const statusCtx = statusCanvas.getContext('2d');
                    const statusData = [@string.Join(",", Model.StudentsByStatus.Take(5).Select(s => s.Count))];
                    const statusLabels = [@Html.Raw(string.Join(",", Model.StudentsByStatus.Take(5).Select(s => $"'{s.Status}'")))];
                    
                    new Chart(statusCtx, {
                        type: 'doughnut',
                        data: {
                            labels: statusLabels,
                            datasets: [{
                                data: statusData,
                                backgroundColor: [
                                    '#28a745', // Active - Green
                                    '#007bff', // Graduated - Blue  
                                    '#dc3545', // Dropped - Red
                                    '#ffc107', // Suspended - Yellow
                                    '#6c757d'  // Other - Gray
                                ],
                                borderWidth: 2,
                                borderColor: '#fff'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            animation: {
                                duration: 1000
                            },
                            plugins: {
                                legend: {
                                    display: false
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return context.label + ': ' + context.parsed + ' students';
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            });
            </text>
        }

        // Trade Chart
        @if (Model.StudentsByTrade.Any())
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                const tradeCanvas = document.getElementById('tradeChart');
                if (tradeCanvas) {
                    const tradeCtx = tradeCanvas.getContext('2d');
                    new Chart(tradeCtx, {
                        type: 'bar',
                        data: {
                            labels: [@Html.Raw(string.Join(",", Model.StudentsByTrade.Select(t => $"'{t.TradeName}'")))],
                            datasets: [{
                                label: 'Students',
                                data: [@string.Join(",", Model.StudentsByTrade.Select(t => t.Count))],
                                backgroundColor: '#007bff',
                                borderColor: '#0056b3',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            animation: {
                                duration: 800
                            },
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            },
                            plugins: {
                                legend: {
                                    display: false
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return context.label + ': ' + context.parsed.y + ' students';
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            });
            </text>
        }

        // Monthly Admissions Chart
        @if (Model.MonthlyAdmissions.Any())
        {
            <text>
            const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
            const monthlyChart = new Chart(monthlyCtx, {
                type: 'line',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.MonthlyAdmissions.Select(m => $"'{m.MonthName}'")))],
                    datasets: [{
                        label: 'Admissions',
                        data: [@string.Join(",", Model.MonthlyAdmissions.Select(m => m.Count))],
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            </text>
        }
    </script>
}

@section Styles {
