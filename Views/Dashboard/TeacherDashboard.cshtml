@model StudentManagementSystem.ViewModels.TeacherDashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-2 px-md-3">
    <div class="row mb-3 mb-md-4">
        <div class="col-12">
            <h2 class="mb-2 mb-md-3 h4 h-md-2">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <span class="d-none d-sm-inline">Welcome, </span>@Model.Teacher.FullName
            </h2>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
        </div>
    </div>

    <!-- Teacher Profile Card -->
    <div class="row mb-3 mb-md-4">
        <div class="col-lg-4 col-md-12 mb-3 mb-lg-0">
            <div class="card h-100">
                <div class="card-body text-center py-3 py-md-4">
                    @if (!string.IsNullOrEmpty(Model.Teacher.PhotoPath))
                    {
                        <img src="@Model.Teacher.PhotoPath" alt="Teacher Photo" class="rounded-circle mb-2 mb-md-3" style="width: 100px; height: 100px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white mb-2 mb-md-3 d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px; font-size: 40px;">
                            <i class="fas fa-user"></i>
                        </div>
                    }
                    <h5 class="h6 h-md-5">@Model.Teacher.FullName</h5>
                    <p class="text-muted mb-1 small">@Model.Teacher.TeacherCode</p>
                    <p class="text-muted mb-2 small">@Model.Teacher.Specialization</p>
                    <span class="badge bg-@(Model.Teacher.Status == "Active" ? "success" : "secondary")">@Model.Teacher.Status</span>
                </div>
            </div>
        </div>

        <div class="col-lg-8 col-md-12">
            <div class="row">
                <div class="col-sm-4 col-6 mb-3">
                    <div class="card bg-primary text-white h-100">
                        <div class="card-body p-2 p-sm-3">
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
                                <div class="text-center text-sm-start">
                                    <h6 class="mb-1 text-white small">Primary Batches</h6>
                                    <h2 class="mb-0 h3 h-sm-2">@Model.PrimaryBatches.Count</h2>
                                </div>
                                <i class="fas fa-users fa-lg fa-sm-2x opacity-50 mt-2 mt-sm-0"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4 col-6 mb-3">
                    <div class="card bg-info text-white h-100">
                        <div class="card-body p-2 p-sm-3">
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
                                <div class="text-center text-sm-start">
                                    <h6 class="mb-1 text-white small">Secondary Batches</h6>
                                    <h2 class="mb-0 h3 h-sm-2">@Model.SecondaryBatches.Count</h2>
                                </div>
                                <i class="fas fa-user-friends fa-lg fa-sm-2x opacity-50 mt-2 mt-sm-0"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4 col-12 mb-3">
                    <div class="card bg-success text-white h-100">
                        <div class="card-body p-2 p-sm-3">
                            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
                                <div class="text-center text-sm-start">
                                    <h6 class="mb-1 text-white small">Total Students</h6>
                                    <h2 class="mb-0 h3 h-sm-2">@Model.TotalStudents</h2>
                                </div>
                                <i class="fas fa-user-graduate fa-lg fa-sm-2x opacity-50 mt-2 mt-sm-0"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body p-2 p-sm-3">
                    <h6 class="card-title small"><i class="fas fa-info-circle me-2"></i>Teacher Information</h6>
                    <div class="row">
                        <div class="col-sm-6 col-12 mb-2 mb-sm-0">
                            <p class="mb-2 small"><strong>Email:</strong> <span class="d-block d-sm-inline text-break">@Model.Teacher.Email</span></p>
                            <p class="mb-2 small"><strong>Phone:</strong> <span class="d-block d-sm-inline">@Model.Teacher.PhoneNumber</span></p>
                        </div>
                        <div class="col-sm-6 col-12">
                            <p class="mb-2 small"><strong>Qualification:</strong> <span class="d-block d-sm-inline">@Model.Teacher.Qualification</span></p>
                            <p class="mb-2 small"><strong>Specialization:</strong> <span class="d-block d-sm-inline">@Model.Teacher.Specialization</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Primary Batches -->
    @if (Model.PrimaryBatches.Any())
    {
        <div class="row mb-3 mb-md-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-2">
                        <h5 class="mb-0 h6 h-md-5"><i class="fas fa-chalkboard me-2"></i>Primary Batches</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small">Code</th>
                                        <th class="small">Name</th>
                                        <th class="d-none d-md-table-cell small">Trade</th>
                                        <th class="d-none d-lg-table-cell small">Session</th>
                                        <th class="small text-center">Students</th>
                                        <th class="small">Status</th>
                                        <th class="small text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var batch in Model.PrimaryBatches)
                                    {
                                        <tr>
                                            <td class="small">@batch.BatchCode</td>
                                            <td class="small">@batch.BatchName</td>
                                            <td class="d-none d-md-table-cell small">@batch.TradeName</td>
                                            <td class="d-none d-lg-table-cell small">@batch.SessionName</td>
                                            <td class="text-center"><span class="badge bg-info">@batch.StudentCount</span></td>
                                            <td><span class="badge bg-@(batch.Status == "Active" ? "success" : "secondary")">@batch.Status</span></td>
                                            <td class="text-center">
                                                <a asp-controller="Batches" asp-action="Details" asp-route-id="@batch.Id" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Secondary Batches -->
    @if (Model.SecondaryBatches.Any())
    {
        <div class="row mb-3 mb-md-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-2">
                        <h5 class="mb-0 h6 h-md-5"><i class="fas fa-users me-2"></i>Secondary Batches</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small">Code</th>
                                        <th class="small">Name</th>
                                        <th class="d-none d-md-table-cell small">Trade</th>
                                        <th class="d-none d-lg-table-cell small">Session</th>
                                        <th class="small text-center">Students</th>
                                        <th class="small">Status</th>
                                        <th class="small text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var batch in Model.SecondaryBatches)
                                    {
                                        <tr>
                                            <td class="small">@batch.BatchCode</td>
                                            <td class="small">@batch.BatchName</td>
                                            <td class="d-none d-md-table-cell small">@batch.TradeName</td>
                                            <td class="d-none d-lg-table-cell small">@batch.SessionName</td>
                                            <td class="text-center"><span class="badge bg-info">@batch.StudentCount</span></td>
                                            <td><span class="badge bg-@(batch.Status == "Active" ? "success" : "secondary")">@batch.Status</span></td>
                                            <td class="text-center">
                                                <a asp-controller="Batches" asp-action="Details" asp-route-id="@batch.Id" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!Model.PrimaryBatches.Any() && !Model.SecondaryBatches.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You have not been assigned to any batches yet.
                </div>
            </div>
        </div>
    }
</div>
