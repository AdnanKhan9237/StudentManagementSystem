@using StudentManagementSystem.Constants
@model StudentManagementSystem.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Student Details</h2>
    <div>
        @if (!User.IsInRole(UserRoles.Student))
        {
            @if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Accounts))
            {
                <form asp-action="ProvisionLogin" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="studentId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success" title="Provision login for this student">
                        <i class="fas fa-id-badge"></i> Provision Login
                    </button>
                </form>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        }
        else
        {
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        }
    </div>
</div>

<div class="row">
    <!-- Student Photo and Basic Info -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                    <img src="@Model.PhotoPath" alt="Student Photo" class="img-fluid rounded mb-3" style="max-height: 250px; width: 100%; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 250px;">
                        <i class="fas fa-user fa-5x text-muted"></i>
                    </div>
                }
                <h4 class="mb-1">@Model.FullName</h4>
                <p class="text-muted mb-2">@Model.RegistrationNumber</p>
                
                @switch (Model.Status)
                {
                    case "Active":
                        <span class="badge bg-success fs-6">Active Student</span>
                        break;
                    case "Graduated":
                        <span class="badge bg-primary fs-6">Graduated</span>
                        break;
                    case "Dropped":
                        <span class="badge bg-danger fs-6">Dropped</span>
                        break;
                    case "Suspended":
                        <span class="badge bg-warning fs-6">Suspended</span>
                        break;
                    default:
                        <span class="badge bg-secondary fs-6">@Model.Status</span>
                        break;
                }
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line"></i> Quick Stats</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h6 class="text-muted">Age</h6>
                        <h4>@Model.Age</h4>
                    </div>
                    <div class="col-6">
                        <h6 class="text-muted">Fee Status</h6>
                        @if (Model.RemainingAmount <= 0)
                        {
                            <h4 class="text-success">Paid</h4>
                        }
                        else if (Model.PaidAmount > 0)
                        {
                            <h4 class="text-warning">Partial</h4>
                        }
                        else
                        {
                            <h4 class="text-danger">Unpaid</h4>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Information -->
    <div class="col-md-8">
        <!-- Personal Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user"></i> Personal Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>First Name:</strong> @Model.FirstName
                    </div>
                    <div class="col-md-6">
                        <strong>Last Name:</strong> @Model.LastName
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <strong>Father Name:</strong> @(Model.FatherName ?? "N/A")
                    </div>
                    <div class="col-md-6">
                        <strong>CNIC:</strong> @(Model.CNIC ?? "N/A")
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMM dd, yyyy")
                    </div>
                    <div class="col-md-4">
                        <strong>Gender:</strong> @Model.Gender
                    </div>
                    <div class="col-md-4">
                        <strong>Blood Group:</strong> @(Model.BloodGroup ?? "N/A")
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-phone"></i> Contact Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Phone:</strong> @(Model.PhoneNumber ?? "N/A")
                    </div>
                    <div class="col-md-6">
                        <strong>Email:</strong> @(Model.Email ?? "N/A")
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <strong>Address:</strong> @Model.Address
                        </div>
                    </div>
                }
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>City:</strong> @(Model.City ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Province:</strong> @(Model.Province ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Postal Code:</strong> @(Model.PostalCode ?? "N/A")
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                {
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Emergency Contact:</strong> @Model.EmergencyContactName
                        </div>
                        <div class="col-md-6">
                            <strong>Emergency Phone:</strong> @(Model.EmergencyContactPhone ?? "N/A")
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Academic Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-graduation-cap"></i> Academic Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Trade:</strong> @Model.TradeName
                    </div>
                    <div class="col-md-6">
                        <strong>Session:</strong> @Model.SessionName
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <strong>Batch:</strong> @Model.BatchName
                    </div>
                    <div class="col-md-6">
                        <strong>Admission Date:</strong> @Model.AdmissionDate.ToString("MMM dd, yyyy")
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.PreviousQualification))
                {
                    <hr>
                    <div class="row">
                        <div class="col-md-4">
                            <strong>Previous Qualification:</strong> @Model.PreviousQualification
                        </div>
                        <div class="col-md-4">
                            <strong>Previous Institute:</strong> @(Model.PreviousInstitute ?? "N/A")
                        </div>
                        <div class="col-md-4">
                            <strong>Previous Marks:</strong> @(Model.PreviousMarks?.ToString("F2") ?? "N/A")%
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Fee Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-money-bill"></i> Fee Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center">
                            <h6 class="text-muted">Total Fee</h6>
                            <h4 class="text-primary">₨@Model.TotalFee.ToString("N0")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h6 class="text-muted">Paid Amount</h6>
                            <h4 class="text-success">₨@Model.PaidAmount.ToString("N0")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h6 class="text-muted">Remaining</h6>
                            <h4 class="@(Model.RemainingAmount > 0 ? "text-danger" : "text-success")">₨@Model.RemainingAmount.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
                @if (Model.TotalFee > 0)
                {
                    <div class="mt-3">
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar @(Model.RemainingAmount <= 0 ? "bg-success" : "bg-primary")" 
                                 style="width: @Math.Min(100, (double)Model.PaidAmount / (double)Model.TotalFee * 100)%">
                                @Math.Round((double)Model.PaidAmount / (double)Model.TotalFee * 100, 1)%
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Additional Information -->
        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Remarks</h5>
                </div>
                <div class="card-body">
                    @Model.Remarks
                </div>
            </div>
        }
    </div>
</div>