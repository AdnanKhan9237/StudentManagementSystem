@model StudentManagementSystem.ViewModels.SessionViewModel

@{
    ViewData["Title"] = "Create Session";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-plus"></i> Create Academic Session
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label">Session Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Fall 2024" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Code" class="form-label">Session Code <span class="text-danger">*</span></label>
                                <input asp-for="Code" class="form-control" placeholder="e.g., FL24" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="EndDate" class="form-label">End Date <span class="text-danger">*</span></label>
                                <input asp-for="EndDate" class="form-control" type="date" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SessionType" class="form-label">Session Type <span class="text-danger">*</span></label>
                                <select asp-for="SessionType" class="form-select">
                                    <option value="Regular">Regular (6 months)</option>
                                    <option value="Short-Term">Short-Term (3 months)</option>
                                    <option value="Long-Term">Long-Term (12+ months)</option>
                                </select>
                                <span asp-validation-for="SessionType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DurationMonths" class="form-label">Duration (Months) <span class="text-danger">*</span></label>
                                <input asp-for="DurationMonths" class="form-control" type="number" min="1" max="60" />
                                <span asp-validation-for="DurationMonths" class="text-danger"></span>
                                <small class="form-text text-muted">Duration will be used to calculate end date.</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional description for this session"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <div class="form-check">
                                    <input asp-for="IsCurrentSession" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsCurrentSession" class="form-check-label">
                                        Set as Current Session
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    Only one session per type can be current at a time.
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Active Session
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    Only active sessions can be used for enrollment.
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Sessions
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Session
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle"></i> Session Guidelines
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Session Naming:</strong>
                    <p class="small">Use descriptive names like "Fall 2024", "Spring 2025", etc.</p>
                </div>
                <div class="mb-3">
                    <strong>Session Code:</strong>
                    <p class="small">Short codes like "FL24", "SP25" for easy identification.</p>
                </div>
                <div class="mb-3">
                    <strong>Current Session:</strong>
                    <p class="small">The current session is used for new student enrollments and is highlighted throughout the system.</p>
                </div>
                <div class="mb-3">
                    <strong>Duration:</strong>
                    <p class="small">Ensure the end date is after the start date and allows sufficient time for the academic session.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Validate date range
        document.getElementById('StartDate').addEventListener('change', validateDates);
        document.getElementById('EndDate').addEventListener('change', validateDates);
        
        function validateDates() {
            const startDate = document.getElementById('StartDate').value;
            const endDate = document.getElementById('EndDate').value;
            
            if (startDate && endDate) {
                const start = new Date(startDate);
                const end = new Date(endDate);
                
                if (end <= start) {
                    document.getElementById('EndDate').setCustomValidity('End date must be after start date');
                } else {
                    document.getElementById('EndDate').setCustomValidity('');
                }
            }
        }
    </script>
}