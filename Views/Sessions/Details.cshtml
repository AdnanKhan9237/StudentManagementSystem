@model StudentManagementSystem.ViewModels.SessionViewModel
@{
    ViewData["Title"] = "Session Details";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Session Name:</dt>
                            <dd class="col-sm-7">@Model.Name</dd>
                            
                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Status == "Active")
                                {
                                    <span class="badge bg-success">@Model.Status</span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-info">@Model.Status</span>
                                }
                                else if (Model.Status == "Upcoming")
                                {
                                    <span class="badge bg-warning">@Model.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-5">Start Date:</dt>
                            <dd class="col-sm-7">@Model.StartDate.ToString("MMMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-5">End Date:</dt>
                            <dd class="col-sm-7">@Model.EndDate.ToString("MMMM dd, yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            @if (Model.RegistrationStartDate.HasValue)
                            {
                                <dt class="col-sm-6">Registration Start:</dt>
                                <dd class="col-sm-6">@Model.RegistrationStartDate.Value.ToString("MMM dd, yyyy")</dd>
                            }
                            
                            @if (Model.RegistrationEndDate.HasValue)
                            {
                                <dt class="col-sm-6">Registration End:</dt>
                                <dd class="col-sm-6">@Model.RegistrationEndDate.Value.ToString("MMM dd, yyyy")</dd>
                            }
                            
                            <dt class="col-sm-6">Total Batches:</dt>
                            <dd class="col-sm-6">@Model.TotalBatches</dd>
                            
                            <dt class="col-sm-6">Total Students:</dt>
                            <dd class="col-sm-6">@Model.TotalStudents</dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-3">
                        <h6>Description:</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") by @Model.CreatedBy
                        </small>
                    </div>
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <div class="col-md-6">
                            <small class="text-muted">
                                <strong>Last Modified:</strong> @Model.ModifiedDate.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt") by @Model.ModifiedBy
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (Model.Batches.Any())
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">Batches in This Session</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Batch Code</th>
                                    <th>Batch Name</th>
                                    <th>Trade</th>
                                    <th>Students</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var batch in Model.Batches)
                                {
                                    <tr>
                                        <td><strong>@batch.BatchCode</strong></td>
                                        <td>@batch.BatchName</td>
                                        <td>@batch.TradeName</td>
                                        <td>@batch.StudentCount</td>
                                        <td>
                                            @if (batch.Status == "Active")
                                            {
                                                <span class="badge bg-success">@batch.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@batch.Status</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Batches" asp-action="Details" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Batches" asp-action="Create" asp-route-sessionId="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Add Batch to Session
                    </a>
                    <a asp-controller="Students" asp-action="Index" asp-route-sessionId="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-users"></i> View Students
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                        <i class="fas fa-edit"></i> Edit Session
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Statistics</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary">@Model.TotalBatches</h4>
                            <small class="text-muted">Batches</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">@Model.TotalStudents</h4>
                        <small class="text-muted">Students</small>
                    </div>
                </div>
                
                @{
                    var duration = (Model.EndDate - Model.StartDate).Days;
                }
                <hr>
                <div class="text-center">
                    <h5 class="text-info">@duration</h5>
                    <small class="text-muted">Days Duration</small>
                </div>
            </div>
        </div>
    </div>
</div>