@model StudentManagementSystem.ViewModels.SessionListViewModel

@{
    ViewData["Title"] = "Sessions Management";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-alt"></i> Academic Sessions</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Session
    </a>
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search sessions..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Status Filter</label>
                <select name="activeFilter" class="form-select">
                    <option value="">All Sessions</option>
                    <option value="true" selected="@(Model.ActiveFilter == true)">Active Only</option>
                    <option value="false" selected="@(Model.ActiveFilter == false)">Inactive Only</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Sessions List -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> Sessions List
            <span class="badge bg-secondary ms-2">@Model.TotalRecords Total</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Sessions.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Session</th>
                            <th>Code</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th>Students</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model.Sessions)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (session.IsCurrentSession)
                                        {
                                            <span class="badge bg-success me-2">CURRENT</span>
                                        }
                                        <div>
                                            <strong>@session.Name</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@session.Code</span>
                                </td>
                                <td>
                                    <div class="small">
                                        <div>@session.StartDate.ToString("MMM dd, yyyy")</div>
                                        <div class="text-muted">to @session.EndDate.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </td>
                                <td>
                                    @if (session.IsCurrentSession)
                                    {
                                        <span class="badge bg-success">Current</span>
                                    }
                                    else if (session.IsActive)
                                    {
                                        <span class="badge bg-info">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-dark">@session.StudentCount</span>
                                </td>
                                <td>
                                    <div class="small text-muted">
                                        <div>@session.CreatedDate.ToString("MMM dd, yyyy")</div>
                                        <div>by @session.CreatedBy</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (!session.IsCurrentSession)
                                        {
                                            <button class="btn btn-outline-success" onclick="setCurrentSession(@session.Id)" title="Set as Current">
                                                <i class="fas fa-star"></i>
                                            </button>
                                        }
                                        @if (session.StudentCount == 0)
                                        {
                                            <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Sessions pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, searchTerm = Model.SearchTerm, activeFilter = Model.ActiveFilter })">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm = Model.SearchTerm, activeFilter = Model.ActiveFilter })">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, searchTerm = Model.SearchTerm, activeFilter = Model.ActiveFilter })">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                <p class="text-muted">No sessions found.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create First Session
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        async function setCurrentSession(sessionId) {
            if (!confirm('Are you sure you want to set this session as current? This will unset any existing current session.')) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("SetCurrentSession")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: sessionId })
                });

                const result = await response.json();
                
                if (result.success) {
                    // Show success message and reload page
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message || 'Failed to update current session');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while updating the current session');
            }
        }
    </script>
}