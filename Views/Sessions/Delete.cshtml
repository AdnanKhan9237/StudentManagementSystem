@model StudentManagementSystem.ViewModels.SessionViewModel
@{
    ViewData["Title"] = "Delete Session";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]
                </h5>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> You are about to delete this session. This action cannot be undone.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Session Name:</dt>
                            <dd class="col-sm-7"><strong>@Model.Name</strong></dd>
                            
                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Status == "Active")
                                {
                                    <span class="badge bg-success">@Model.Status</span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-info">@Model.Status</span>
                                }
                                else if (Model.Status == "Upcoming")
                                {
                                    <span class="badge bg-warning">@Model.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-5">Start Date:</dt>
                            <dd class="col-sm-7">@Model.StartDate.ToString("MMMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-5">End Date:</dt>
                            <dd class="col-sm-7">@Model.EndDate.ToString("MMMM dd, yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-6">Total Batches:</dt>
                            <dd class="col-sm-6">
                                <span class="badge bg-primary">@Model.TotalBatches</span>
                            </dd>
                            
                            <dt class="col-sm-6">Total Students:</dt>
                            <dd class="col-sm-6">
                                <span class="badge bg-success">@Model.TotalStudents</span>
                            </dd>
                            
                            <dt class="col-sm-6">Created By:</dt>
                            <dd class="col-sm-6">@Model.CreatedBy</dd>
                            
                            <dt class="col-sm-6">Created Date:</dt>
                            <dd class="col-sm-6">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-3">
                        <h6>Description:</h6>
                        <p class="text-muted border p-2 rounded">@Model.Description</p>
                    </div>
                }

                @if (Model.TotalBatches > 0 || Model.TotalStudents > 0)
                {
                    <div class="alert alert-danger mt-3">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>Impact Warning:</strong>
                        <ul class="mb-0 mt-2">
                            @if (Model.TotalBatches > 0)
                            {
                                <li>This session has <strong>@Model.TotalBatches batch(es)</strong> that will be affected.</li>
                            }
                            @if (Model.TotalStudents > 0)
                            {
                                <li>This session has <strong>@Model.TotalStudents student(s)</strong> enrolled.</li>
                            }
                            <li>All related data will be marked as deleted but preserved for historical records.</li>
                        </ul>
                    </div>
                }

                <hr>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                        
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this session? This action cannot be undone.')">
                            <i class="fas fa-trash"></i> Yes, Delete Session
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>