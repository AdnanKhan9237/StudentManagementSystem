@model StudentManagementSystem.ViewModels.StudentReportListViewModel
@{
    ViewData["Title"] = "Student Reports";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>
            <div class="card-body">
                <!-- Filters -->
                <form method="get" class="mb-4">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="sessionId" class="form-label">Session</label>
                            <select name="sessionId" id="sessionId" class="form-select">
                                <option value="">All Sessions</option>
                                @foreach (var session in Model.Sessions)
                                {
                                    <option value="@session.Id" selected="@(Model.SessionId == session.Id)">
                                        @session.Name
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="tradeId" class="form-label">Trade</label>
                            <select name="tradeId" id="tradeId" class="form-select">
                                <option value="">All Trades</option>
                                @foreach (var trade in Model.Trades)
                                {
                                    <option value="@trade.Id" selected="@(Model.TradeId == trade.Id)">
                                        @trade.NameEnglish
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="batchId" class="form-label">Batch</label>
                            <select name="batchId" id="batchId" class="form-select">
                                <option value="">All Batches</option>
                                @foreach (var batch in Model.Batches)
                                {
                                    <option value="@batch.Id" selected="@(Model.BatchId == batch.Id)">
                                        @batch.BatchCode
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" id="status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                                <option value="Inactive" selected="@(Model.Status == "Inactive")">Inactive</option>
                                <option value="Graduated" selected="@(Model.Status == "Graduated")">Graduated</option>
                                <option value="Dropped" selected="@(Model.Status == "Dropped")">Dropped</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter"></i> Apply Filters
                            </button>
                            <a asp-action="StudentReport" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear Filters
                            </a>
                            <button type="button" class="btn btn-success ms-2" onclick="exportToExcel()">
                                <i class="fas fa-file-excel"></i> Export to Excel
                            </button>
                            <button type="button" class="btn btn-danger ms-2" onclick="exportToPDF()">
                                <i class="fas fa-file-pdf"></i> Export to PDF
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Summary Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Students.Count</h4>
                                <p class="mb-0">Total Students</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Students.Sum(s => s.TotalFee).ToString("C")</h4>
                                <p class="mb-0">Total Fees</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Students.Sum(s => s.PaidAmount).ToString("C")</h4>
                                <p class="mb-0">Total Paid</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Students.Sum(s => s.RemainingAmount).ToString("C")</h4>
                                <p class="mb-0">Total Outstanding</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Data Table -->
                @if (Model.Students.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="studentReportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Student Code</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Session</th>
                                    <th>Trade</th>
                                    <th>Batch</th>
                                    <th>Status</th>
                                    <th>Admission Date</th>
                                    <th>Total Fee</th>
                                    <th>Paid Amount</th>
                                    <th>Remaining</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td>@student.StudentCode</td>
                                        <td>@student.FullName</td>
                                        <td>@student.Email</td>
                                        <td>@student.PhoneNumber</td>
                                        <td>@student.SessionName</td>
                                        <td>@student.TradeName</td>
                                        <td>@student.BatchCode</td>
                                        <td>
                                            <span class="badge bg-@(student.Status == "Active" ? "success" : student.Status == "Graduated" ? "primary" : student.Status == "Dropped" ? "danger" : "secondary")">
                                                @student.Status
                                            </span>
                                        </td>
                                        <td>@student.AdmissionDate.ToString("dd/MM/yyyy")</td>
                                        <td>@student.TotalFee.ToString("C")</td>
                                        <td>@student.PaidAmount.ToString("C")</td>
                                        <td>
                                            <span class="text-@(student.RemainingAmount > 0 ? "danger" : "success")">
                                                @student.RemainingAmount.ToString("C")
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No students found</h5>
                        <p class="text-muted">Try adjusting your filter criteria.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#studentReportTable').DataTable({
                "pageLength": 25,
                "ordering": true,
                "searching": true,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                "language": {
                    "search": "Search students:",
                    "lengthMenu": "Show _MENU_ students per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ students",
                    "infoEmpty": "Showing 0 to 0 of 0 students",
                    "infoFiltered": "(filtered from _MAX_ total students)"
                }
            });
        });

        function exportToExcel() {
            // Add Excel export functionality
            alert('Excel export functionality will be implemented');
        }

        function exportToPDF() {
            // Add PDF export functionality
            alert('PDF export functionality will be implemented');
        }
    </script>
}

@section Styles {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}