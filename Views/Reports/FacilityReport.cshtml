@model StudentManagementSystem.ViewModels.FacilityReportListViewModel
@{
    ViewData["Title"] = "Facility Reports";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>
            <div class="card-body">
                <form method="get" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label" for="sessionId">Session</label>
                            <select id="sessionId" name="sessionId" class="form-select">
                                <option value="">All Sessions</option>
                                @foreach (var s in Model.Sessions)
                                {
                                    <option value="@s.Id" selected="@(Model.SessionId == s.Id)">@s.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="tradeId">Trade</label>
                            <select id="tradeId" name="tradeId" class="form-select">
                                <option value="">All Trades</option>
                                @foreach (var t in Model.Trades)
                                {
                                    <option value="@t.Id" selected="@(Model.TradeId == t.Id)">@t.NameEnglish</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="roomType">Room Type</label>
                            <select id="roomType" name="roomType" class="form-select">
                                <option value="">All Types</option>
                                @foreach (var rt in Model.RoomTypes)
                                {
                                    <option value="@rt" selected="@(Model.RoomType == rt)">@rt</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="building">Building</label>
                            <select id="building" name="building" class="form-select">
                                <option value="">All Buildings</option>
                                @foreach (var b in Model.Buildings)
                                {
                                    <option value="@b" selected="@(Model.Building == b)">@b</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Apply Filters</button>
                            <a asp-action="FacilityReport" class="btn btn-outline-secondary ms-1"><i class="fas fa-times"></i> Clear</a>
                            <button type="button" class="btn btn-success ms-2" onclick="exportToExcel()"><i class="fas fa-file-excel"></i> Export to Excel</button>
                            <button type="button" class="btn btn-danger ms-2" onclick="exportToPDF()"><i class="fas fa-file-pdf"></i> Export to PDF</button>
                        </div>
                    </div>
                </form>

                @if (Model.Rooms.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="facilityReportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Room #</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Building</th>
                                    <th>Floor</th>
                                    <th>Capacity</th>
                                    <th>Batches</th>
                                    <th>Students</th>
                                    <th>Utilization</th>
                                    <th>Equipment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model.Rooms)
                                {
                                    <tr>
                                        <td><strong>@r.RoomNumber</strong></td>
                                        <td>@(r.RoomName ?? "-")</td>
                                        <td>@r.RoomType</td>
                                        <td>@(r.Building ?? "-")</td>
                                        <td>@(r.Floor ?? "-")</td>
                                        <td>@r.Capacity</td>
                                        <td>@r.ActiveBatches</td>
                                        <td>@r.TotalStudents</td>
                                        <td>
                                            <div class="progress" style="height: 18px;">
                                                <div class="progress-bar bg-@(r.UtilizationPercent >= 90 ? "danger" : r.UtilizationPercent >= 70 ? "warning" : "success")" style="width:@r.UtilizationPercent%">
                                                    @Math.Round(r.UtilizationPercent, 1)%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (r.HasProjector) { <span class="badge bg-info me-1">Projector</span> }
                                            @if (r.HasComputers) { <span class="badge bg-primary me-1">Computers</span> }
                                            @if (r.HasAirConditioning) { <span class="badge bg-secondary">AC</span> }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-building fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No rooms found</h5>
                        <p class="text-muted">Adjust your filters and try again.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportToExcel() {
            const baseUrl = '@Url.Action("FacilityReportCsv", "Reports")';
            const params = new URLSearchParams();
            const sessionId = document.getElementById('sessionId').value;
            const tradeId = document.getElementById('tradeId').value;
            const roomType = document.getElementById('roomType').value;
            const building = document.getElementById('building').value;
            if (sessionId) params.append('sessionId', sessionId);
            if (tradeId) params.append('tradeId', tradeId);
            if (roomType) params.append('roomType', roomType);
            if (building) params.append('building', building);
            window.location.href = baseUrl + (params.toString() ? ('?' + params.toString()) : '');
        }
        function exportToPDF() {
            const title = 'Facility Report';
            const table = document.getElementById('facilityReportTable');
            const win = window.open('', '_blank');
            win.document.write('<html><head><title>' + title + '</title>');
            win.document.write('<style>body{font-family:Arial,sans-serif;padding:16px;} table{width:100%;border-collapse:collapse} th,td{border:1px solid #ccc;padding:6px;text-align:left}</style>');
            win.document.write('</head><body>');
            win.document.write('<h3>' + title + '</h3>');
            win.document.write(table.outerHTML);
            win.document.write('</body></html>');
            win.document.close();
            win.focus();
            win.print();
        }
    </script>
}
