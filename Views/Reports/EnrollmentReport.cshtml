@model StudentManagementSystem.ViewModels.EnrollmentReportListViewModel
@{
    ViewData["Title"] = "Enrollment Report";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>
            <div class="card-body">
                <!-- Filters -->
                <form method="get" class="mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="sessionId" class="form-label">Session</label>
                            <select name="sessionId" id="sessionId" class="form-select">
                                <option value="">All Sessions</option>
                                @foreach (var s in Model.Sessions)
                                {
                                    <option value="@s.Id" selected="@(Model.SessionId == s.Id)">@s.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="tradeId" class="form-label">Trade</label>
                            <select name="tradeId" id="tradeId" class="form-select">
                                <option value="">All Trades</option>
                                @foreach (var t in Model.Trades)
                                {
                                    <option value="@t.Id" selected="@(Model.TradeId == t.Id)">@t.NameEnglish</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter"></i> Apply Filters
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row mb-3">
                    <div class="col-12">
                        <button type="button" class="btn btn-success" onclick="exportToExcel()">
                            <i class="fas fa-file-excel"></i> Export to Excel
                        </button>
                        <button type="button" class="btn btn-danger ms-2" onclick="exportToPDF()">
                            <i class="fas fa-file-pdf"></i> Export to PDF
                        </button>
                    </div>
                </div>

                @if (Model.Enrollments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="enrollmentReportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Reg. No</th>
                                    <th>Student</th>
                                    <th>Session</th>
                                    <th>Trade</th>
                                    <th>Batch</th>
                                    <th>Admission Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var e in Model.Enrollments)
                                {
                                    <tr>
                                        <td><strong>@e.RegNo</strong></td>
                                        <td>@e.StudentName</td>
                                        <td>@e.SessionName</td>
                                        <td>@e.TradeName</td>
                                        <td>@e.BatchCode</td>
                                        <td>@e.AdmissionDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-@(e.Status == "Active" ? "success" : e.Status == "Graduated" ? "primary" : e.Status == "Dropped" ? "danger" : "secondary")">
                                                @e.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                        <h5>No enrollment records found</h5>
                        <p class="text-muted">Adjust filters to broaden your search.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#enrollmentReportTable').DataTable({
                pageLength: 25,
                order: [[2, 'asc'], [3, 'asc'], [0, 'asc']]
            });
        });
        function exportToExcel() {
            const baseUrl = '@Url.Action("EnrollmentReportCsv", "Reports")';
            const params = new URLSearchParams();
            const sessionId = document.getElementById('sessionId').value;
            const tradeId = document.getElementById('tradeId').value;
            if (sessionId) params.append('sessionId', sessionId);
            if (tradeId) params.append('tradeId', tradeId);
            window.location.href = baseUrl + (params.toString() ? ('?' + params.toString()) : '');
        }

        function exportToPDF() {
            const title = 'Enrollment Report';
            const table = document.getElementById('enrollmentReportTable');
            const win = window.open('', '_blank');
            win.document.write('<html><head><title>' + title + '</title>');
            win.document.write('<style>body{font-family:Arial,sans-serif;padding:16px;} table{width:100%;border-collapse:collapse} th,td{border:1px solid #ccc;padding:6px;text-align:left}</style>');
            win.document.write('</head><body>');
            win.document.write('<h3>' + title + '</h3>');
            win.document.write(table.outerHTML);
            win.document.write('</body></html>');
            win.document.close();
            win.focus();
            win.print();
        }
    </script>
}

@section Styles {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}
