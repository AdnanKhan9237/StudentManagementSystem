@model StudentManagementSystem.ViewModels.BatchReportListViewModel
@{
    ViewData["Title"] = "Batch Reports";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>
            <div class="card-body">
                <!-- Filters -->
                <form method="get" class="mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="sessionId" class="form-label">Session</label>
                            <select name="sessionId" id="sessionId" class="form-select">
                                <option value="">All Sessions</option>
                                @foreach (var session in Model.Sessions)
                                {
                                    <option value="@session.Id" selected="@(Model.SessionId == session.Id)">
                                        @session.Name
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="tradeId" class="form-label">Trade</label>
                            <select name="tradeId" id="tradeId" class="form-select">
                                <option value="">All Trades</option>
                                @foreach (var trade in Model.Trades)
                                {
                                    <option value="@trade.Id" selected="@(Model.TradeId == trade.Id)">
                                        @trade.NameEnglish
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" id="status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                                <option value="Inactive" selected="@(Model.Status == "Inactive")">Inactive</option>
                                <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                                <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter"></i> Apply Filters
                            </button>
                            <a asp-action="BatchReport" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear Filters
                            </a>
                            <button type="button" class="btn btn-success ms-2" onclick="exportToExcel()">
                                <i class="fas fa-file-excel"></i> Export to Excel
                            </button>
                            <button type="button" class="btn btn-danger ms-2" onclick="exportToPDF()">
                                <i class="fas fa-file-pdf"></i> Export to PDF
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Summary Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Batches.Count</h4>
                                <p class="mb-0">Total Batches</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Batches.Sum(b => b.EnrolledStudents)</h4>
                                <p class="mb-0">Total Students</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Batches.Sum(b => b.MaxStudents)</h4>
                                <p class="mb-0">Total Capacity</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h4>@(Model.Batches.Any() ? Math.Round(Model.Batches.Average(b => b.FillPercentage), 1) : 0)%</h4>
                                <p class="mb-0">Avg. Fill Rate</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Data Table -->
                @if (Model.Batches.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="batchReportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Batch Code</th>
                                    <th>Batch Name</th>
                                    <th>Session</th>
                                    <th>Trade</th>
                                    <th>Room</th>
                                    <th>Timing</th>
                                    <th>Status</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Capacity</th>
                                    <th>Enrolled</th>
                                    <th>Available</th>
                                    <th>Fill %</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var batch in Model.Batches)
                                {
                                    <tr>
                                        <td><strong>@batch.BatchCode</strong></td>
                                        <td>@batch.BatchName</td>
                                        <td>@batch.SessionName</td>
                                        <td>@batch.TradeName</td>
                                        <td>@batch.RoomNumber</td>
                                        <td>@batch.TimingDescription</td>
                                        <td>
                                            <span class="badge bg-@(batch.Status == "Active" ? "success" : batch.Status == "Completed" ? "primary" : batch.Status == "Cancelled" ? "danger" : "secondary")">
                                                @batch.Status
                                            </span>
                                        </td>
                                        <td>@batch.StartDate.ToString("dd/MM/yyyy")</td>
                                        <td>@batch.EndDate.ToString("dd/MM/yyyy")</td>
                                        <td>@batch.MaxStudents</td>
                                        <td>@batch.EnrolledStudents</td>
                                        <td>@batch.AvailableSlots</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar bg-@(batch.FillPercentage >= 90 ? "success" : batch.FillPercentage >= 70 ? "warning" : "info")" 
                                                     role="progressbar" 
                                                     style="width: @batch.FillPercentage%"
                                                     aria-valuenow="@batch.FillPercentage" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                    @Math.Round(batch.FillPercentage, 1)%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <a asp-controller="Batches" asp-action="Details" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-layer-group fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No batches found</h5>
                        <p class="text-muted">Try adjusting your filter criteria.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#batchReportTable').DataTable({
                "pageLength": 25,
                "ordering": true,
                "searching": true,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                "language": {
                    "search": "Search batches:",
                    "lengthMenu": "Show _MENU_ batches per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ batches",
                    "infoEmpty": "Showing 0 to 0 of 0 batches",
                    "infoFiltered": "(filtered from _MAX_ total batches)"
                },
                "columnDefs": [
                    { "orderable": false, "targets": [12, 13] } // Disable sorting for Fill % and Actions columns
                ]
            });
        });

        function exportToExcel() {
            const baseUrl = '@Url.Action("BatchReportCsv", "Reports")';
            const params = new URLSearchParams();
            const sessionId = document.getElementById('sessionId').value;
            const tradeId = document.getElementById('tradeId').value;
            const status = document.getElementById('status').value;
            if (sessionId) params.append('sessionId', sessionId);
            if (tradeId) params.append('tradeId', tradeId);
            if (status) params.append('status', status);
            window.location.href = baseUrl + (params.toString() ? ('?' + params.toString()) : '');
        }

        function exportToPDF() {
            const title = 'Batch Report';
            const table = document.getElementById('batchReportTable');
            const win = window.open('', '_blank');
            win.document.write('<html><head><title>' + title + '</title>');
            win.document.write('<style>body{font-family:Arial,sans-serif;padding:16px;} table{width:100%;border-collapse:collapse} th,td{border:1px solid #ccc;padding:6px;text-align:left}</style>');
            win.document.write('</head><body>');
            win.document.write('<h3>' + title + '</h3>');
            win.document.write(table.outerHTML);
            win.document.write('</body></html>');
            win.document.close();
            win.focus();
            win.print();
        }
    </script>
}

@section Styles {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}