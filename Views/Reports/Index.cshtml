@model StudentManagementSystem.ViewModels.ReportsIndexViewModel
@{
    ViewData["Title"] = "Reports Dashboard";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <!-- Summary Statistics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.TotalStudents</h3>
                                <p class="mb-0">Total Students</p>
                                <small>@Model.ActiveStudents Active</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.TotalBatches</h3>
                                <p class="mb-0">Total Batches</p>
                                <small>@Model.ActiveBatches Active</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@Model.TotalTrades</h3>
                                <p class="mb-0">Total Trades</p>
                                <small>@Model.ActiveTrades Active</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h3>@Model.TotalSessions</h3>
                                <p class="mb-0">Total Sessions</p>
                                <small>@Model.ActiveSessions Active</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Available Reports -->
                <div class="row">
                    <div class="col-12">
                        <h5 class="mb-3">Available Reports</h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">Student Reports</h5>
                                <p class="card-text">Detailed student enrollment, status, and fee information.</p>
                                <a asp-action="StudentReport" class="btn btn-primary">
                                    <i class="fas fa-chart-line"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-layer-group fa-3x text-success mb-3"></i>
                                <h5 class="card-title">Batch Reports</h5>
                                <p class="card-text">Batch capacity, enrollment, and schedule information.</p>
                                <a asp-action="BatchReport" class="btn btn-success">
                                    <i class="fas fa-chart-bar"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-calendar-check fa-3x text-info mb-3"></i>
                                <h5 class="card-title">Attendance Reports</h5>
                                <p class="card-text">Student attendance tracking and analysis.</p>
                                <a asp-action="AttendanceReport" class="btn btn-info">
                                    <i class="fas fa-chart-pie"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-id-badge fa-3x text-primary mb-3"></i>
                                <h5 class="card-title">Enrollment Reports</h5>
                                <p class="card-text">Enrollments per session and trade with Reg. No.</p>
                                <a asp-action="EnrollmentReport" class="btn btn-primary">
                                    <i class="fas fa-list"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-dollar-sign fa-3x text-warning mb-3"></i>
                                <h5 class="card-title">Fee Reports</h5>
                                <p class="card-text">Student fee collection and outstanding balances.</p>
                                <a asp-action="FeeReport" class="btn btn-warning">
                                    <i class="fas fa-chart-area"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-building fa-3x text-secondary mb-3"></i>
                                <h5 class="card-title">Facility Reports</h5>
                                <p class="card-text">Room utilization and facility management.</p>
                                <a asp-action="FacilityReport" class="btn btn-secondary">
                                    <i class="fas fa-chart-line"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-graduation-cap fa-3x text-dark mb-3"></i>
                                <h5 class="card-title">Academic Reports</h5>
                                <p class="card-text">Performance tracking and certification reports.</p>
                                <a asp-action="AcademicReport" class="btn btn-dark">
                                    <i class="fas fa-chart-line"></i> Generate Report
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Statistics -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Quick Statistics</h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-2">
                                        <h4 class="text-primary">@Model.TotalRooms</h4>
                                        <small class="text-muted">Total Rooms</small>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-success">@Model.ActiveRooms</h4>
                                        <small class="text-muted">Active Rooms</small>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-info">@Model.TotalTrades</h4>
                                        <small class="text-muted">Total Trades</small>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-warning">@Model.ActiveTrades</h4>
                                        <small class="text-muted">Active Trades</small>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-danger">@Model.TotalSessions</h4>
                                        <small class="text-muted">Total Sessions</small>
                                    </div>
                                    <div class="col-md-2">
                                        <h4 class="text-secondary">@Model.ActiveSessions</h4>
                                        <small class="text-muted">Active Sessions</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>