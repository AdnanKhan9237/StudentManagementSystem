@model StudentManagementSystem.ViewModels.AcademicReportListViewModel
@{
    ViewData["Title"] = "Academic Reports";
    Layout = "~/Views/Shared/_ModernLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>
            <div class="card-body">
                <form method="get" class="mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label" for="sessionId">Session</label>
                            <select id="sessionId" name="sessionId" class="form-select">
                                <option value="">All Sessions</option>
                                @foreach (var s in Model.Sessions)
                                {
                                    <option value="@s.Id" selected="@(Model.SessionId == s.Id)">@s.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label" for="tradeId">Trade</label>
                            <select id="tradeId" name="tradeId" class="form-select">
                                <option value="">All Trades</option>
                                @foreach (var t in Model.Trades)
                                {
                                    <option value="@t.Id" selected="@(Model.TradeId == t.Id)">@t.NameEnglish</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter"></i> Apply Filters
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <a asp-action="AcademicReport" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear Filters
                            </a>
                            <button type="button" class="btn btn-success ms-2" onclick="exportToExcel()">
                                <i class="fas fa-file-excel"></i> Export to Excel
                            </button>
                            <button type="button" class="btn btn-danger ms-2" onclick="exportToPDF()">
                                <i class="fas fa-file-pdf"></i> Export to PDF
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4>@Model.Items.Count</h4>
                                <p class="mb-0">Students</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4>@Model.AveragePercentage.ToString("F1")%</h4>
                                <p class="mb-0">Average Percentage</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h4>@Model.PassRate.ToString("F1")%</h4>
                                <p class="mb-0">Pass Rate</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="academicReportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Student Code</th>
                                    <th>Student</th>
                                    <th>Session</th>
                                    <th>Trade</th>
                                    <th class="text-end">Latest %</th>
                                    <th>Grade</th>
                                    <th>Result</th>
                                    <th>Latest Exam</th>
                                    <th>Certificates</th>
                                    <th>Last Certificate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model.Items)
                                {
                                    <tr>
                                        <td><strong>@i.StudentCode</strong></td>
                                        <td>@i.StudentName</td>
                                        <td>@i.SessionName</td>
                                        <td>@i.TradeName</td>
                                        <td class="text-end">@(i.LatestPercentage?.ToString("F1") ?? "-")</td>
                                        <td>@(i.LatestGrade ?? "-")</td>
                                        <td>
                                            <span class="badge bg-@((i.LatestResult ?? "").Equals("Pass", StringComparison.OrdinalIgnoreCase) ? "success" : (i.LatestResult ?? "") == "Fail" ? "danger" : "secondary")">
                                                @(i.LatestResult ?? "-")
                                            </span>
                                        </td>
                                        <td>@(i.LatestExamDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@i.CertificatesIssued</td>
                                        <td>@(i.LastCertificateDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-graduation-cap fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No academic data found</h5>
                        <p class="text-muted">Adjust your filters and try again.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportToExcel() {
            const baseUrl = '@Url.Action("AcademicReportCsv", "Reports")';
            const params = new URLSearchParams();
            const sessionId = document.getElementById('sessionId').value;
            const tradeId = document.getElementById('tradeId').value;
            if (sessionId) params.append('sessionId', sessionId);
            if (tradeId) params.append('tradeId', tradeId);
            window.location.href = baseUrl + (params.toString() ? ('?' + params.toString()) : '');
        }
        function exportToPDF() {
            const title = 'Academic Report';
            const table = document.getElementById('academicReportTable');
            const win = window.open('', '_blank');
            win.document.write('<html><head><title>' + title + '</title>');
            win.document.write('<style>body{font-family:Arial,sans-serif;padding:16px;} table{width:100%;border-collapse:collapse} th,td{border:1px solid #ccc;padding:6px;text-align:left} .text-end{text-align:right}</style>');
            win.document.write('</head><body>');
            win.document.write('<h3>' + title + '</h3>');
            win.document.write(table.outerHTML);
            win.document.write('</body></html>');
            win.document.close();
            win.focus();
            win.print();
        }
    </script>
}
