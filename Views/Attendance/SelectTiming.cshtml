@model dynamic
@{
    ViewData["Title"] = "Select Timing - Take Attendance";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h5>Select Timing Slot</h5>
                <p class="text-muted">
                    <strong>@Model.BatchName</strong> (@Model.BatchCode) | @Model.TradeName | @Model.SessionName
                </p>
                <p class="text-muted">
                    <i class="fas fa-calendar"></i> @Model.Date.ToString("dddd, dd MMMM yyyy")
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-clock"></i> Available Timing Slots</h5>
                </div>
                <div class="card-body">
                    @if (Model.Timings.Count > 0)
                    {
                        <p class="text-muted mb-4">
                            <i class="fas fa-info-circle"></i> Select a timing slot to take attendance for students enrolled in that specific time period.
                        </p>
                        <div class="row">
                            @foreach (var timing in Model.Timings)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card border-primary h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <div>
                                                    <h5 class="card-title text-primary">
                                                        <i class="fas fa-clock"></i> @timing.TimingName
                                                    </h5>
                                                </div>
                                                <span class="badge badge-info">@timing.StudentCount Students</span>
                                            </div>
                                            <p class="card-text text-muted">
                                                <i class="fas fa-users"></i> @timing.StudentCount student(s) enrolled in this timing slot
                                            </p>
                                            <div class="mt-3">
                                                <a asp-action="TakeAttendance" 
                                                   asp-route-batchId="@Model.BatchId" 
                                                   asp-route-timingId="@timing.TimingId"
                                                   asp-route-date="@Model.Date.ToString("yyyy-MM-dd")" 
                                                   class="btn btn-success btn-block">
                                                    <i class="fas fa-check"></i> Take Attendance
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> No Timing Slots Found</h5>
                            <p class="mb-0">
                                There are no students assigned to specific timing slots in this batch. 
                                Please ensure students have timing assignments before taking attendance.
                            </p>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Batches
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-primary {
            border-left: 4px solid #007bff !important;
            transition: all 0.2s ease-in-out;
        }
        
        .border-primary:hover {
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.15);
            transform: translateY(-2px);
        }
        
        .badge-info {
            font-size: 0.875rem;
            padding: 0.5em 0.75em;
        }
    </style>
}
